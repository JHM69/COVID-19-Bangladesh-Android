<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextStyle">
        <item name="fontFamily">@font/mina</item>
        <item name="android:fontFamily">@font/mina</item>
    </style>

    <style name="BanglaBodyTextStyle">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="EnglishBodyTextStyle">
        <item name="fontFamily">@font/popins</item>
        <item name="android:fontFamily">@font/popins</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
